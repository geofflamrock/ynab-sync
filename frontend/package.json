{
  "private": true,
  "name": "ynab-sync",
  "productName": "YNAB Sync",
  "description": "Sync your bank transactions to YNAB",
  "author": {
    "name": "Geoff Lamrock"
  },
  "version": "0.0.1",
  "sideEffects": false,
  "main": "build/desktop/main.js",
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "pnpm run generate:css -- --minify",
    "build:electron": "esbuild ./desktop/main.ts --bundle --platform=node --outdir=./build/desktop --external:electron",
    "build:remix": "run-s build:remix:*",
    "build:remix:build": "remix build",
    "build:remix:copy": "copyfiles -f ./prisma/schema.prisma ./node_modules/prisma/query*.node ./build/server",
    "build:worker": "run-s build:worker:*",
    "build:worker:copy": "copyfiles -f ./prisma/schema.prisma ./node_modules/prisma/query*.node ./build/workers && copyfiles -f ./node_modules/node-expat/build/Release/node_expat.node ./build",
    "build:worker:build": "esbuild ./workers/sync.ts ./workers/schedule.ts --bundle --platform=node --outdir=./build/workers",
    "dev": "run-s dev:build && run-p dev:css dev:remix dev:electron",
    "dev:build": "run-s prisma:generate build:remix:copy build:worker build:electron",
    "dev:css": "pnpm run generate:css --watch",
    "dev:remix": "remix watch",
    "dev:electron": "electron-forge start",
    "electron": "electron",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "make": "electron-forge make",
    "package": "electron-forge package",
    "postinstall": "electron-rebuild",
    "prisma": "prisma",
    "prisma:generate": "prisma generate",
    "generate:css": "tailwindcss -o ./app/tailwind.css",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^2.0.12",
    "@prisma/client": "^4.5.0",
    "@remix-run/node": "^1.7.2",
    "@remix-run/react": "^1.7.2",
    "@remix-run/serve": "^1.7.2",
    "@remix-run/server-runtime": "^1.7.2",
    "classnames": "^2.3.2",
    "cron-parser": "^4.7.0",
    "cronstrue": "^2.21.0",
    "date-fns": "^2.29.3",
    "dotenv": "16.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra": "10.1.0",
    "isbot": "^3.5.4",
    "lodash": "4.17.21",
    "nan": "^2.17.0",
    "node-expat": "^2.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-electron": "^1.2.2",
    "tiny-invariant": "^1.3.1",
    "winston": "3.8.2",
    "ynab-sync-core": "0.3.0",
    "ynab-sync-st-george-au": "0.3.1",
    "ynab-sync-westpac-au": "0.4.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.2.10",
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@remix-run/dev": "^1.7.2",
    "@remix-run/eslint-config": "^1.7.2",
    "@tailwindcss/forms": "^0.5.3",
    "@types/fs-extra": "9.0.13",
    "@types/lodash": "4.14.189",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "copyfiles": "2.4.1",
    "electron": "^22.0.0",
    "electron-reload": "1.5.0",
    "esbuild": "0.15.14",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "8.5.0",
    "nodemon": "2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "0.1.13",
    "prisma": "^4.5.0",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=16"
  }
}

{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "func",
			"command": "host start",
			"problemMatcher": "$func-node-watch",
			"isBackground": true,
			"dependsOn": "pnpm build",
			"options": {
				"cwd": "${workspaceFolder}/packages\\azure-functions"
			}
		},
		{
			"type": "shell",
			"label": "pnpm build",
			"command": "pnpm run build",
			"dependsOn": "pnpm install",
			"problemMatcher": "$tsc",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "shell",
			"label": "pnpm install",
			"command": "pnpm install",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "shell",
			"label": "pnpm prune",
			"command": "pnpm prune --production",
			"dependsOn": "pnpm build",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}